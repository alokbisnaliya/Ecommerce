<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-white">

    <!-- Header -->
    <header class="bg-gray-800 shadow-md p-6 flex justify-between items-center">
        <h1 class="text-2xl font-bold text-white">ðŸ›’ Your Cart</h1>
        <a href="/shop" class="text-white bg-blue-500 px-4 py-2 rounded-lg shadow-md hover:bg-blue-600 transition">Continue Shopping</a>
    </header>

    <main class="p-8">
        <% if (cartProduct.length > 0) { %>
        
        <!-- Cart Products -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% cartProduct.forEach(item => { %>
            <div class="bg-gray-800 rounded-lg shadow-lg transform transition-all hover:scale-105 hover:shadow-2xl">
                <!-- Product Image -->
                <div class="relative">
                    <img src="<%= item.image %>" alt="<%= item.name %>" class="w-full h-64 object-cover rounded-t-lg">
                    <div class="absolute top-0 right-0 bg-gray-800 bg-opacity-70 p-2 text-white rounded-bl-lg">
                        <span class="font-semibold text-lg">â‚¹<%= item.price %></span>
                    </div>
                </div>
                
                <!-- Product Details -->
                <div class="p-4">
                    <h2 class="text-xl font-semibold text-white truncate"><%= item.name %></h2>
                    <p class="text-gray-400 mt-2 text-sm">A brief description of the product goes here...</p>
                    
                    <!-- Quantity Controls -->
                    <div class="flex items-center justify-between mt-4 space-x-4">
                        <div class="flex items-center">
                            <button class="text-xl text-gray-300 hover:text-white transition-all">-</button>
                            <input name="quantity" type="number" min="1" value="1" class="w-16 p-2 bg-gray-700 text-white border border-gray-600 rounded-md text-center">
                            <button class="text-xl text-gray-300 hover:text-white transition-all">+</button>
                        </div>
                        
                        <!-- Remove Button -->
                        <form class="mt-4" action="/cart/remove" method="POST">
                            <input type="hidden" name="item_id" value="<%= item._id %>">
                            <button class="bg-red-500 text-white px-4 py-2 rounded-lg shadow-md hover:bg-red-600 transition">
                                Remove
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>

        <!-- Checkout Button -->
        <div class="flex justify-center mt-8">
            <a href="/cart/checkout">
                <button class="bg-green-500 text-white px-6 py-3 rounded-lg shadow-md hover:bg-green-600 transition">Proceed to Checkout</button>
            </a>
        </div>

        <% } else { %>
        
        <!-- Empty Cart Message -->
        <div class="text-center text-white">
            <h2 class="text-xl">No Items in Your Cart</h2>
        </div>

        <% } %>
    </main>

    <script>
        // Add any necessary JavaScript here
    </script>

</body>
</html>
