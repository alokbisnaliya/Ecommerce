<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Premium E-Commerce Store</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background: url('https://img.freepik.com/premium-vector/digital-marketing-concept-shopping-online-mobile-application_68971-366.jpg?w=1380') no-repeat center center;
            background-size: cover;
            background-attachment: fixed;
            height: 100vh; /* Ensures the background covers the entire viewport height */
        }
    </style>
</head>
<body class="text-white">
    <!-- Navigation Bar -->
    <header class="bg-gray-900 bg-opacity-90 shadow-lg px-6 py-4 fixed w-full top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 flex justify-between items-center">
            <!-- Logo -->
            <a href="/" class="text-2xl font-bold text-white hover:text-yellow-500 transition duration-300">MyStore</a>
    
            <!-- Navbar Links for Larger Screens -->
            <div class="hidden md:flex space-x-6">
                <a href="/shop" class="text-white hover:text-yellow-500 transition duration-300">Shop</a>
                <a href="/about" class="text-white hover:text-yellow-500 transition duration-300">About</a>
                <a href="/contact" class="text-white hover:text-yellow-500 transition duration-300">Contact</a>
            </div>
    
            <!-- Login/Sign Up Buttons for Smaller Screens or Not Logged In -->
            <div class="hidden md:flex space-x-4">
                <% if (!token) { %>
                    <a href="/login" class="bg-yellow-500 text-black px-4 py-2 rounded-lg shadow-md hover:bg-yellow-400 transition duration-300">Login</a>
                    <a href="/register" class="bg-yellow-500 text-black px-4 py-2 rounded-lg shadow-md hover:bg-yellow-400 transition duration-300">Sign Up</a>
                <% } else { %>
                    <a href="/profile" class="bg-yellow-500 text-black px-4 py-2 rounded-lg shadow-md hover:bg-yellow-400 transition duration-300">Profile</a>
                <% } %>
            </div>
    
            <!-- Hamburger Menu for Small Screens -->
            <div class="md:hidden flex items-center">
                <button class="text-white focus:outline-none" id="menuButton">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>
            </div>
        </div>
    
        <!-- Mobile Menu Dropdown -->
        <div class="md:hidden" id="mobileMenu" style="display: none;">
            <div class="bg-gray-800 text-white p-4">
                <a href="/shop" class="block py-2 hover:text-yellow-500 transition duration-300">Shop</a>
                <a href="/about" class="block py-2 hover:text-yellow-500 transition duration-300">About</a>
                <a href="/contact" class="block py-2 hover:text-yellow-500 transition duration-300">Contact</a>
                <% if (!token) { %>
                    <a href="/login" class="block py-2 bg-yellow-500 text-black rounded-lg shadow-md hover:bg-yellow-400 transition duration-300">Login</a>
                    <a href="/register" class="block py-2 bg-yellow-500 text-black rounded-lg shadow-md hover:bg-yellow-400 transition duration-300">Sign Up</a>
                <% } else { %>
                    <a href="/profile" class="block py-2 bg-yellow-500 text-black rounded-lg shadow-md hover:bg-yellow-400 transition duration-300">Profile</a>
                <% } %>
            </div>
        </div>
    </header>
    
    <script>
        // Toggle mobile menu visibility
        document.getElementById("menuButton").addEventListener("click", function () {
            const menu = document.getElementById("mobileMenu");
            if (menu.style.display === "none" || menu.style.display === "") {
                menu.style.display = "block";
            } else {
                menu.style.display = "none";
            }
        });
    </script>
    
    
    <!-- Hero Section -->
    <section class="h-screen flex items-center justify-center text-center px-6">
        <div class="bg-black bg-opacity-60 p-10 rounded-lg">
            <h1 class="text-5xl font-bold mb-4">Welcome to MyStore</h1>
            <p class="text-lg mb-6">Exclusive Collections, Unmatched Quality</p>
            <a href="/shop" class="bg-yellow-500 text-black px-6 py-3 rounded font-semibold hover:bg-yellow-400 transition">Start Shopping</a>
        </div>
    </section>
    
    <!-- Featured Products -->
    <section class="bg-white py-16 text-black">
        <div class="max-w-7xl mx-auto px-6">
            <h2 class="text-3xl font-bold text-center mb-8">Featured Products</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
                <% products.forEach(product => { %>
                    <div class="bg-gray-200 rounded-lg overflow-hidden shadow-lg transition duration-300 hover:shadow-xl">
                        <img src="<%= product.image %>" alt="<%= product.name %>" class="w-full h-48 object-cover">
                        <div class="p-4 text-center">
                            <h3 class="text-xl font-semibold"><%= product.name %></h3>
                            <p class="text-gray-600">$<%= product.price %></p>
                            <button class="mt-4 bg-black text-white px-4 py-2 rounded hover:bg-gray-800 transition">Add to Cart</button>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </section>
    
    <!-- Footer -->
    <footer class="bg-black text-white text-center py-6">
        <p>&copy; 2024 MyStore. All Rights Reserved.</p>
    </footer>
</body>
</html>
